{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "edge-simulator/**/*",
    "ingest-server/**/*",
    "dashboard/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}